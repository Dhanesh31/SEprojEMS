        <h1 class="page-header" style="margin-top: 13px;">Edit Profile</h1>

          <!-- edit form column -->
          <div class="col-md-8 col-sm-6 col-xs-12 personal-info">


            <h3>Personal info</h3>
            <form class="form-horizontal" role="form" method="POST">

              <div class="form-group">
                <label class="col-lg-3 control-label">Roll no:</label>
                <div class="col-lg-8">
                  <input class="form-control" value="<%= roll_no %>" type="text" name="rollno">
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Name:</label>
                <div class="col-lg-8">
                  <input class="form-control" value="<%= name %>" type="text" name="name">
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Semester:</label>
                  <div class="col-lg-8">
                    <select class="combo form-control input-sm select-hidden-accessible" aria-hidden="true" name="sem"  value="<%= sem %>selected">
                      <option value="<%= sem %>" selected><%= sem %></option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                    </select>
                  </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Department:</label>
                  <div class="col-lg-8">
                    <select class="combo form-control input-sm select-hidden-accessible" aria-hidden="true" name="dept"  value="<%= dept %>">
                      <option value="<%= dept %>"selected><%= dept %></option>
                      <option value="CSE">CSE</option>
                      <option value="ECE">ECE</option>
                      <option value="EEE">EEE</option>
                      <option value="MEC">MECH</option>
                      <option value="CIE">CIVIL</option>

                    </select>
                  </div>
              </div>





              <div class="form-group">
                <label class="col-lg-3 control-label">DOB:</label>
                <div class="col-lg-8">
                  <input class="form-control" value="<%= dob %>" name = "dob" type="date">
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Mobile Number:</label>
                <div class="col-lg-8">
                  <input class="form-control" value="<%= mobile %>" name = "mobile" type="text">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="Gender" name="Gender" >Gender:</label>
                <div class="col-md-4">

                    <% if(k == '1'.trim()) { %>
                        <label class="radio-inline" for="Gender-0">
                            <input type="radio" name="Gender" id="Gender-0" value="1" checked>
                            Male
                        </label>
                    <% } else { %>
                        <label class="radio-inline" for="Gender-0">
                            <input type="radio" name="Gender" id="Gender-0" value="1" >
                            Male
                        </label>
                    <% } %>

                    <% if(k == '2'.trim()) { %>
                        <label class="radio-inline" for="Gender-1">
                            <input type="radio" name="Gender" id="Gender-1" value="2" checked>
                            Female
                        </label>
                    <% } else { %>
                        <label class="radio-inline" for="Gender-1">
                            <input type="radio" name="Gender" id="Gender-1" value="2" >
                            Female
                        </label>
                    <% } %>

                    <% if(k == '3'.trim()) { %>
                        <label class="radio-inline" for="Gender-2">
                            <input type="radio"  name="Gender" id="Gender-2" value="3" checked>
                            Other
                        </label>
                    <% } else { %>
                        <label class="radio-inline" for="Gender-2">
                            <input type="radio"  name="Gender" id="Gender-2" value="3" >
                            Other
                        </label>
                    <% } %>
                </div>
              </div>

              <div class="form-group">
                <label class="col-md-3 control-label">Age:</label>
                <div class="col-md-8">
                  <input class="form-control" value="<%= Age %>" type="text" name="Age">
                </div>
              </div>
              <h3>Address</h3>
              <div class="form-group">
                <label class="col-md-3 control-label">City:</label>
                <div class="col-md-8">
                  <input class="form-control" value="<%= City %>" type="text" name="City">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label">State:</label>
                <div class="col-md-8">
                  <input class="form-control" value="<%= State %>" type="text" name="State">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                  <button type="submit" class="btn btn-primary" formaction="/stud_save" style="background-color: black;">Save Changes</button>
                  <span></span>
                  <input class="btn btn-default" value="Cancel" type="reset">
                </div>
              </div>
            </form>
          </div>
        </div>
